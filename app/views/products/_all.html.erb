<h3 class="admin-title">Product List</h3>
<div class="row">
  <% if Product.all %>
      <% Product.all.each do |product| %>
          <div class="admin-list col-sm-3">
            <%= image_tag product.image.url(:standard), alt: product.description %>
            <p><%= product.description %></p>
            <p>$<%= product.price %></p>
            <p>active: <%= product.active %></p>
            <%= link_to "Edit", edit_product_path(product.id), class: 'btn btn-success' %>
            <%= link_to "Delete", product, method: :delete, class: 'btn btn-danger',
                        data: { confirm: 'Are you sure you want to delete this product?' }  %>
          </div>
      <% end %>
  <% end %>
</div>