<div class="content-container col-sm-6">
  <%= form_for @product, html: { multipart: true } do |f| %>
      <div class="form-group">
        <%= f.label :description %>
        <%= f.text_field :description, class: 'form-control', :required => true  %>
      </div>
      <div class="form-group">
        <%= f.label :price %><br>
        $<%= f.number_field :price, min: 1 %>
      </div>
      <div class="form-group">
        <%= f.label :image %>
        <% if @product.image_file_name == nil %>
          <%= f.file_field :image, :required => true  %>
        <% end %>
      </div>
      <div class="form-group">
        <%= f.label :active %>
        <%= f.check_box :active, checked: true %>
      </div>
      <div class="form-group">
        <%= f.submit "Save Product", class: 'btn btn-success' %>
        <%= link_to "Cancel", admin_path, class: 'btn btn-success' %>
      </div>
  <% end %>
</div>
