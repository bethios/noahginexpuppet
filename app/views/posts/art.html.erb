<div class="row">
  <div class="col-sm-6">
    <div class="art-video">
      <%= video_tag "JamesonCapture.mp4#t=31,442", autoplay: :autoplay, loop: :loop, mute: :mute, id:
          'video' %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="content-container">
      <% if @art %>
          <h2><%= @art.title %></h2>
          <%= link_to 'Edit Text', edit_post_path(@art.id), class: 'btn btn-success' %>
          <p><%= markdown(@art.body) %></p>
      <% else %>
          <p>Coming Soon!</p>
      <% end %>
    </div>
  </div>
</div>

<% if @art_projects %>
    <% @art_projects.each do |project| %>
        <div class="content-container">
          <%= image_tag project.image.url(:standard) %>
          <p><%= project.title %></p>
          <%= link_to "Delete Project", project, method: :delete, class: 'btn btn-danger',
                      data: { confirm: 'Are you sure you want to delete this project?' }  %>
        </div>
    <% end %>
<% end %>
