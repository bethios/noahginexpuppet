<div class="row">
  <div class="col-sm-6">
    <div class="art-video">
      <%= video_tag ("Jameson-drawing.mp4"), autoplay: true, loop: true, muted: true, id:
          'video' %>
    </div>
  </div>
  <div class="col-sm-6">
    <div class="content-container">
      <% if @art %>
          <h2><%= @art.title %></h2>
          <%= link_to 'Edit Text', edit_post_path(@art.id), class: 'btn btn-success' %>
          <p><%= markdown(@art.body) %></p>
      <% else %>
          <p>Coming Soon!</p>
          <%= link_to 'Add Text', new_post_path, class: 'btn btn-success' %>
    <% end %>
    </div>
  </div>
</div>
<div class="skew"></div>
<div class="projects-container">
  <% if @art_projects %>
      <% @art_projects.each do |project| %>
          <div class="content-container">
            <%= image_tag project.image.url(:standard) %>
            <p><%= project.title %></p>
            <%= link_to "Delete Project", project, method: :delete, class: 'btn btn-danger',
                        data: { confirm: 'Are you sure you want to delete this project?' }  %>
          </div>
      <% end %>
  <% end %>
</div>
