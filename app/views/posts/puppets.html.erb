<div class="content-container">
  <% if @puppets %>
      <h2><%= @puppets.title %></h2>
      <%= link_to 'Edit Text', edit_post_path(@puppets.id), class: 'btn btn-success' %>
      <p><%= markdown(@puppets.body) %></p>
  <% else %>
      <p>Coming Soon!</p>
  <% end %>
</div>
<div class="skew"></div>
<div class="projects-container">
  <% if @puppets_projects %>
      <% @puppets_projects.each do |project| %>
          <div class="flip-container content-container" ontouchstart="this.classList.toggle('hover');">
            <div class="flipper">
              <div class="front">
                <%= image_tag project.image.url(:standard) %>
              </div>
              <div class="back">
                <p><%= project.title %></p>
                <%= link_to "Delete Project", project, method: :delete, class: 'btn btn-danger',
                            data: { confirm: 'Are you sure you want to delete this project?' }  %>
              </div>
            </div>
          </div>
      <% end %>
  <% end %>
</div>

