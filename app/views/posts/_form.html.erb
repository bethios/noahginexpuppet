<div class="row">
  <%= render partial: 'markdown' %>

  <div class="col-sm-6">
    <div class="content-container">
      <%= form_for @post do |f| %>
          <div class="form-group">
            <%= f.label :category %>
            <%= f.select :category,options_for_select([['About', 1],['Puppets', 2],['Art', 3],['Face Painting', 4],["Hire Me", 5] ],
                                                      :selected => params[:category]),
                         class: "form-control"  %>
          </div>
          <div class="form-group">
            <%= f.label :title%>
            <%= f.text_field :title, class: "form-control" %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 12, col: 40, class: 'form-control' %>
          </div>
          <div class="">
            <%= f.submit "Save", class: 'btn btn-success'%>
            <%= link_to "Cancel", admin_path, class: 'btn btn-success' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
