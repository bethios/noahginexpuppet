<div class="row">
  <%= render partial: 'markdown' %>

  <div class="col-sm-6">
    <div class="content-container">
      <%= form_for @post do |f| %>
          <% if !@post.category %>
            <div class="form-group">
              <%= f.label :category %>
              <%= f.select :category,options_for_select([['About- first', 1],['About- second', 2],['Puppets', 3],['Art', 4],['Face Painting', 5],["Hire Me", 6] ],
                                                        :selected => params[:category]),
                           class: "form-control"  %>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :title%>
            <%= f.text_field :title, class: "form-control", :required => true  %>
          </div>
          <div class="form-group">
            <%= f.label :body %>
            <%= f.text_area :body, rows: 12, col: 40, class: 'form-control', :required => true  %>
          </div>
          <div class="">
            <%= f.submit "Save", class: 'btn btn-success'%>
            <%= link_to "Cancel", admin_path, class: 'btn btn-success' %>
          </div>
      <% end %>
    </div>
  </div>
</div>
